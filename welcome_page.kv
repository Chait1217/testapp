<WelcomeScreen>:
    FitImage:
        source:"Images/background_image.jpg"
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            title: "Homepage"
            left_action_items: [["menu",lambda x:app.change_screen_and_call_reset_function("sixth")]]
        RelativeLayout:
            MDLabel:
                font_style: "H5"
                text: "WELCOME TO AKIPING"
                halign: "center"
                text_size: 0.5,0.8
                pos_hint:{"center_x":.5,"center_y": .87}
                color: 1,0.87,0.69,1
            MDFillRoundFlatButton:
                text: "I will read your mind."
                size_hint: .5, .1
                pos_hint: {"center_x":.5,"center_y":.25}
                md_bg_color: [1,0.87,0.69,1]
                on_release:
                    root.manager.transition.direction = "left"
                    app.change_screen_and_call_reset_function("second")