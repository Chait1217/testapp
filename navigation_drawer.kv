<NavDrawer>:
    MDBoxLayout:
        id: content_drawer
        orientation: "vertical"
        padding: ['8dp', '20dp', '8dp', '8dp']
        spacing: "16dp"
        md_bg_color: 1,0.87,0.69,1
        MDBoxLayout:
            size_hint_y: None
            spacing: dp(-15)
            size_hint_x: 1
            MDLabel:
                id: title_name
                text: "Akiping"
                halign: "center"
                markup: True
                theme_text_color: 'Custom'
                text_color: 0, 0, 0, 1
                font_style: "H3"
                size_hint_y: None
                height: self.texture_size[1]
        MDSeparator:
            height: '2dp'
            color: 0, 0, 0, 1
        ScrollView:
            do_scroll: False
            MDList:
                id: item_drawer
                OneLineAvatarListItem:
                    id: homepage
                    text: '[size=18sp]Homepage[/size]'
                    markup: True
                    on_release:
                        app.root.current = "main"
                    divider_color: 0, 0, 0, 1
                    theme_text_color: 'Custom'
                    text_color: 0, 0, 0, 1
                    IconLeftWidget:
                        icon: 'home-outline'
                        theme_text_color: 'Custom'
                        text_color: 1, 1, 1, 1
                OneLineAvatarListItem:
                    id: exit
                    text: '[size=18sp]Exit[/size]'
                    markup: True
                    on_release: app.stop()
                    divider_color: 0, 0, 0, 1
                    theme_text_color: 'Custom'
                    text_color: 0, 0, 0, 1
                    IconLeftWidget:
                        icon: 'information-outline'
                        theme_text_color: 'Custom'
                        text_color: 1, 1, 1, 1

        MDIconButton:
            icon: 'close'
            on_release:
                app.root.current = "main"
            user_font_size: "30sp"
            pos_hint: {'center_x': .9}
            theme_text_color: 'Custom'
            text_color: 0, 0, 0, 1