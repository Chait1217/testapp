<FifthWindow>:
    FitImage:
        source:"Images/whitewall.jpg"

    MDLabel:
        id: question1
        text: 'Text'
        halign:"center"
        pos_hint:{"center_x":.5,"center_y": .7}
        font_style: "H3"

    MDFillRoundFlatButton:
        text: "Play Again"
        size_hint: .5, .1 #width #height
        pos_hint: {"center_x":.5,"center_y":.2}
        md_bg_color: [0.09,0.69,0.68,1]
        on_release:
            app.call_reset_index()
            app.root.current = "second"
            root.manager.transition.direction = "right"





































