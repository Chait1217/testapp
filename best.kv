<SecondWindow>:
    FitImage:
        source:"Images/tabletennis.jpg"
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            title: "Themes"
            right_action_items: [["home",lambda x:app.call_change_screen()]]
        RelativeLayout:
            MDLabel:
                #font_name: "fonts/styl.otf"
                #font_size: dp(60)
                font_style: "H5"
                halign:"center"
                text: "CHOOSE YOUR THEME"
                pos_hint:{"center_x":.5,"center_y": .8}
                color: 1,0.87,0.69,1

            MDFillRoundFlatButton:
                size_hint: .4, .1
                text: "Countries"
                pos_hint: {"center_x":.25,"center_y": .4}
                on_release:
                    app.root.current = "third"
                    root.manager.transition.direction = "left"

            MDFillRoundFlatButton:
                size_hint: .4, .1
                text: "Top 100 TT Players"
                pos_hint: {"center_x":.75,"center_y": .4}
                on_release:
                    app.root.current = "fourth"
                    root.manager.transition.direction = "left"

<ThirdWindow>:
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: "Countries"
            #md_bg_color: [0.98,0.98,0.98,1]
            right_action_items: [["home",lambda x:app.call_change_screen()]]

        GridLayout:
            rows: 2
            MDLabel:
                id: question
                text: 'Text'
                halign:"center"

            GridLayout:
                rows: 3
                MDRaisedButton:
                    md_bg_color: [0.09,0.69,0.68,1]
                    size_hint:0.5,0.2
                    text : 'Yes'
                    id: yes
                    on_release:
                        #root.set_answer('yes')
                        root.teststart('yes')

                MDRaisedButton:
                    md_bg_color: [0.09,0.69,0.68,1]
                    size_hint:0.5,0.2
                    text : "Don't know"
                    id: dunno
                    on_release:
                        #root.set_answer('dnk')
                        root.teststart('dnk')

                MDRaisedButton:
                    md_bg_color: [0.09,0.69,0.68,1]
                    size_hint:0.5,0.2
                    text : 'no'
                    id: no
                    on_release:
                        #root.set_answer('no')
                        root.teststart('no')

