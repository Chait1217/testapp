<FifthWindow>:
    FitImage:
        source:"Images/whitewall.jpg"
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            title: "Result"
            right_action_items: [["home",lambda x:app.call_change_screen()]]
        RelativeLayout:
            MDLabel:
                id: question1
                text: 'Text'
                halign:"center"
                pos_hint:{"center_x":.5,"center_y": .8}
                font_style: "H5"

            MDFillRoundFlatButton:
                text: "Play Again"
                size_hint: .5, .1 #width #height
                pos_hint: {"center_x":.5,"center_y":.3}
                md_bg_color: [0.09,0.69,0.68,1]
                on_release:
                    app.call_reset_index()
                    app.root.current = "second"
                    root.manager.transition.direction = "right"



<SixthWindow>:

    MDBoxLayout:
        id: content_drawer
        orientation: "vertical"
        padding: ['8dp', '20dp', '8dp', '8dp']
        spacing: "16dp"
        md_bg_color: 1,0.87,0.69,1
        MDBoxLayout:
            size_hint_y: None
            spacing: dp(-15)
            size_hint_x: 1

            MDLabel:
                text: "Akiping"
                halign: "center"
                markup: True
                theme_text_color: 'Custom'
                text_color: 0, 0, 0, 1
                font_style: "H3"
                size_hint_y: None
                height: self.texture_size[1]
        MDSeparator:
            height: '2dp'
            color: 0, 0, 0, 1
        ScrollView:
            do_scroll: False
            MDList:
                id: item_drawer
                OneLineAvatarListItem:
                    text: '[size=18sp]Homepage[/size]'
                    markup: True
                    on_release:
                        app.root.current = "main"
                        root.manager.transition.direction = "right"
                    divider_color: 0, 0, 0, 1
                    theme_text_color: 'Custom'
                    text_color: 0, 0, 0, 1
                    IconLeftWidget:
                        icon: 'home-outline'
                        theme_text_color: 'Custom'
                        text_color: 1, 1, 1, 1
                OneLineAvatarListItem:
                    text: '[size=18sp]Exit[/size]'
                    markup: True
                    on_release: app.stop()
                    divider_color: 0, 0, 0, 1
                    theme_text_color: 'Custom'
                    text_color: 0, 0, 0, 1
                    IconLeftWidget:
                        icon: 'information-outline'
                        theme_text_color: 'Custom'
                        text_color: 1, 1, 1, 1

        MDIconButton:
            icon: 'close'
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"
            user_font_size: "30sp"
            pos_hint: {'center_x': .9}
            theme_text_color: 'Custom'
            text_color: 0, 0, 0, 1


































