#:import MDRoundFlatButton kivymd.uix.button.MDRoundFlatButton

WindowManager:
    id: management
    MainWindow:
        id: main
        name: "main"
    SecondWindow:
        name: "second"
        id: second
    ThirdWindow:
        id: third
        name: "third"
    FourthWindow:
        id: fourth
        name: "fourth"
    FifthWindow:
        id: fifth
        name: "fifth"




<MainWindow>:
    FitImage:
        source:"Images/background_image.jpg"


    MDLabel:
        #font_name: "fonts/styl.otf"
        #font_size: dp(60)
        font_style: "H4"
        text: "WELCOME TO AKIPING"
        halign: "center"
        text_size: 0.5,0.8
        pos_hint:{"center_x":.5,"center_y": .8}
        color: 1,0.87,0.69,1

    MDFillRoundFlatButton:
        text: "I will read your mind."
        size_hint: .5, .1 #width #height
        pos_hint: {"center_x":.5,"center_y":0.2}
        md_bg_color: [1,0.87,0.69,1]
        on_release:
            app.root.current = "second"
            root.manager.transition.direction = "left"

    #MDLabel:
        #text: "Choose between two themes:"
